
<section id="formulario-denuncia-cont">

<h2>Ingresa la información de tu denuncia</h2>
<form action="/generar-denuncia" method="POST" enctype="multipart/form-data" class="form" id="formulario-denuncia">

  <div class="formulario-denuncia-inner-cont">
    <label for="titulo">Título</label>
    <input type="text" name="titulo">
  </div>

  <div class="formulario-denuncia-inner-cont">
    <label for="descripcion">Descripción</label>
    <textarea name="descripcion" id="descripcion" cols="30"
      rows="10"></textarea>
  </div>

  <div class="formulario-denuncia-inner-cont" style="display: none">
    <label for="">
      Longitude:
      <input id="lng" type="text" name="lng" value="{{ubicacion.coordenadas.[0]}}" />
    </label>
  </div>
  <div class="formulario-denuncia-inner-cont" style="display: none">
    <label for="">
      Latitude:
      <input id="lat" type="text" name="lat" value="{{ubicacion.coordenadas.[1]}}" />
    </label>

  </div>
  <div class="formulario-denuncia-inner-cont">
  <label for="">Ubicación</label>
  <div id="search" type="text" name="direccion"></div>
  </div>

  <div id='map' style='width: 400px; height: 300px;'></div>

  <div class="formulario-denuncia-inner-cont">
    <label for="images">Imagen(es)</label>
    <input type="file" name="images" multiple>
  </div>

  <div class="formulario-denuncia-inner-cont">
    <label for="categoria">Categoría</label>
    <select name="categoria" id="">
      <option value="" selected disabled>Selecciona una categoría</option>
      {{#each categorias as |c|}}
      <option value="{{_id}}">{{descripcion}}</option>
      {{/each}}
    </select>
  </div>

  <button type="submit">Denuncia!</button>
</form>
</section>

<script>

  const cdmx = [-99.133209, 19.432608];

  mapboxgl.accessToken =
    "pk.eyJ1IjoidG9tYXNmcmFuY2lzY29hciIsImEiOiJjanUwbHYzdGEzZ2piNDBwY2hsMWFrcG1nIn0.I9dBd93c-Yph7coxBiWO6A";

  let geocoder = new MapboxGeocoder({
    accessToken: mapboxgl.accessToken
  })

  var input_lng = document.getElementById("lng");
  var input_lat = document.getElementById("lat");

  var map = new mapboxgl.Map({
    container: "map",
    style: "mapbox://styles/mapbox/navigation-preview-day-v2",
    center: cdmx,
    zoom: 12
  });

  map.addControl(new mapboxgl.NavigationControl());

  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(
      function (position) {
        const user_location = [
          position.coords.longitude,
          position.coords.latitude
        ];
        map.setCenter(user_location);
        map.setZoom(14);

      },
      function () {
        console.log("Error in the geolocation service.");
      }
    );
  } else {
    console.log("Browser does not support geolocation.");
  }

  geocoder.on("result", res => {
    console.log(res.result);
    let [lng, lat] = res.result.center;
    input_lng.value = lng;
    input_lat.value = lat;
  });

  document.getElementById("search").appendChild(geocoder.onAdd(map));

</script>

